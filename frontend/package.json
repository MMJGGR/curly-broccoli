{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://api:8000",
  "scripts": {
    "start": "cross-env REACT_APP_API_BASE_URL=http://api:8000 react-scripts start",
    "dev": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --env=jsdom --coverage",
    "e2e": "cross-env REACT_APP_API_BASE_URL=http://localhost:8000 cypress run --browser chrome --config defaultCommandTimeout=15000",
    "e2e:open": "cross-env REACT_APP_API_BASE_URL=http://localhost:8000 cypress open",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:strict": "eslint src --max-warnings 0",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "validate": "npm run lint:strict && npm run format:check && npm run test -- --watchAll=false"
  },
  "dependencies": {
    "autoprefixer": "^10.4.13",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.30.1",
    "react-scripts": "^5.0.1",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.6.1",
    "babel-jest": "^29.0.0",
    "cross-env": "^7.0.3",
    "cypress": "^13.0.0",
    "start-server-and-test": "^2.0.12"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
