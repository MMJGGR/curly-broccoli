# Fast development Dockerfile using pre-built React image
FROM node:18-alpine AS base

WORKDIR /app

# Copy package files
COPY package.json ./

# Install dependencies with optimizations
RUN npm config set registry https://registry.npmjs.org/ && \
    npm config set fund false && \
    npm config set audit false && \
    npm install --silent --no-optional --prefer-offline

# Copy source code
COPY . .

# Expose port
EXPOSE 3000

# Start development server
CMD ["npm", "start"]